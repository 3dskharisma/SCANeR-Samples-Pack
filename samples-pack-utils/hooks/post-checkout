#!/bin/sh

echo AUTO UPDATE 'configurations.cfg'
echo This will add all folders begining by \"./config/SAMPLE_\" to \"$(realpath "..\\configurations.cfg")\".

function cancel() {
	echo 'configurations.cfg' was not updated.
}

function add_config() {
	for c in ./config/SAMPLE_*/
	do {
		c=${c#./config/}
		c=${c%/}
		echo Adding $c...
		echo $c = \${STUDIO_PATH}\\SCANeRstudio_2022\\config\\$c >> ../configurations.cfg
	} done
	echo Successfully updated \"$(realpath "..\\configurations.cfg")\".;
}

add_config